<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="rectangle_edit" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rectangle_focus</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:longClickable">false</item>
    </style>
    <style name="rectangle_dateText" parent="rectangle_edit">
        <item name="android:minWidth">50dp</item>
    </style>
    <style name="rectangle_spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">#fc0000</item>
    </style>

</resources>
