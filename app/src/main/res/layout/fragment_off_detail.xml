<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        style="@style/off_detail_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="访客签离" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/off_detail_portrait"
            android:layout_width="114dp"
            android:layout_height="146dp"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/off_detail_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/off_detail_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名:"/>
                <TextView
                    android:id="@+id/off_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/off_detail_text"
                    android:text="Jack Json"/>
            </LinearLayout>

            <LinearLayout
                style="@style/off_detail_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/off_detail_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性別:"/>
                <TextView
                    android:id="@+id/off_detail_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/off_detail_text"
                    android:text="男"/>
            </LinearLayout>

            <LinearLayout
                style="@style/off_detail_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/off_detail_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件类型:"/>
                <TextView
                    android:id="@+id/off_detail_cardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/off_detail_text"
                    android:text="身份证"/>
            </LinearLayout>

            <LinearLayout

                style="@style/off_detail_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/off_detail_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件号码:" />
                <TextView
                    android:id="@+id/off_detail_cardNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/off_detail_text"
                    android:text="370000198605127896"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/off_detail_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/off_detail_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入时间:" />

        <TextView
            android:id="@+id/off_detail_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/off_detail_text"
            android:text="2018-01-12 18:50"/>
    </LinearLayout>

    <LinearLayout
        style="@style/off_detail_off_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            style="@style/off_detail_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离开时间:" />

        <LinearLayout
            android:id="@+id/off_detail_offTimeContainer"
            style="@style/query_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/off_detail_offTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:minWidth="150dp"
                style="@style/off_detail_text"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e4e4e4" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@mipmap/ic_date" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/off_detail_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/off_detail_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登记时间:" />

        <TextView
            android:id="@+id/off_detail_checkTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/off_detail_text"
            android:text="2018-01-15 19:20"/>
    </LinearLayout>

    <LinearLayout
        style="@style/off_detail_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/off_detail_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被访人:" />

        <TextView
            android:id="@+id/off_detail_beVisitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gson Json"/>
    </LinearLayout>

    <LinearLayout
        style="@style/off_detail_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/off_detail_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被访人部门:" />

        <TextView
            android:id="@+id/off_detail_beVisitorDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Develop Center"/>
    </LinearLayout>

    <LinearLayout
        style="@style/off_detail_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/off_detail_sure"
            style="@style/off_detail_btn"
            android:background="@drawable/query_btn"
            android:text="确认签离"
            android:textColor="@drawable/query_btn_text" />

        <Button
            android:id="@+id/off_detail_cancel"
            style="@style/off_detail_btn"
            android:background="@drawable/btn_cancel"
            android:text="取消"
            android:textColor="@drawable/button_no_text" />
    </LinearLayout>

</LinearLayout>