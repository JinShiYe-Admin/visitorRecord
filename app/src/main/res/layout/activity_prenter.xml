<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="464dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_print_tape_border"
    android:orientation="vertical"
    tools:context="net.jiaobaowang.visitor.printer.PrinterActivity">

    <LinearLayout
        android:id="@+id/print_tape_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Print_TextView_Content"
            android:gravity="center_horizontal"
            android:text="@string/visitor_form"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tape_type_tv"
            style="@style/Print_TextView_Content"
            android:gravity="center_horizontal"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vis_name_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/name" />

        <TextView
            android:id="@+id/vis_gender_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/gender" />

        <TextView
            android:id="@+id/vis_org_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/visitor_org" />

        <TextView
            android:id="@+id/vis_reason_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/visitor_reason" />

        <TextView
            android:id="@+id/user_name_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/interviewee" />

        <TextView
            android:id="@+id/user_department_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/interviewee_department" />

        <LinearLayout
            android:id="@+id/student_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/grade_name_tv"
                style="@style/Print_TextView_Content"
                android:text="@string/grade" />

            <TextView
                android:id="@+id/class_name_tv"
                style="@style/Print_TextView_Content"
                android:text="@string/classes" />

            <TextView
                android:id="@+id/headmaster_name_tv"
                style="@style/Print_TextView_Content"
                android:text="@string/head_master" />
        </LinearLayout>

        <TextView
            android:id="@+id/entry_time_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/entry_time" />

        <TextView
            android:id="@+id/registrant_tv"
            style="@style/Print_TextView_Content"
            android:text="@string/registrant" />

        <ImageView
            android:id="@+id/bar_code_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/bar_code_tv"
            style="@style/Print_TextView_Content"
            android:gravity="center_horizontal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/remarks_tv"
            style="@style/Print_TextView_Content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorRed"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/confirm_print_btn"
                style="@style/button_yes"
                android:layout_width="116dp"
                android:layout_height="46dp"
                android:text="@string/confirm_print"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/cancel_btn"
                style="@style/button_no"
                android:layout_width="116dp"
                android:layout_height="46dp"
                android:text="@string/cancel"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

