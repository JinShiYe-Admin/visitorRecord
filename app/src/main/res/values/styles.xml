<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/print_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/print_content</item>
        <item name="android:textColorHint">@color/button_no</item>
    </style>

    <style name="rectangle_edit" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rectangle_focus</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="rectangle_dateText" parent="rectangle_edit">
        <item name="android:minWidth">80dp</item>
    </style>

    <style name="rectangle_spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">#fc0000</item>
    </style>

    <style name="Theme.ActivityDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Login_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#63bbff</item>
        <item name="colorControlHighlight">#63bbff</item>
    </style>

    <!--访客单内容-->
    <style name="Print_TextView_Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/print_content</item>
    </style>

    <style name="button_yes">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/button_yes_text</item>
        <item name="android:background">@drawable/button_yes_bg</item>
    </style>

    <style name="button_no">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/button_no_text</item>
        <item name="android:background">@drawable/button_no_bg</item>
    </style>

    <style name="button_save_print">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/button_save_print_text</item>
        <item name="android:background">@drawable/button_save_print_bg</item>
    </style>

    <!--ManageActivity 左侧列表-->
    <style name="manage_left">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@drawable/manage_left_text</item>
        <item name="android:background">@drawable/manage_left_bg</item>
    </style>

    <!--信息的标题-->
    <style name="info_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/info_title</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!--来访登记访客信息-->
    <!--布局-->
    <style name="visitor_edit_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--输入框-->
    <style name="visitor_edit_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_edit_text_height</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@drawable/edit_border</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/edit_text_enable</item>
    </style>
    <!--下拉列表-->
    <style name="visitor_edit_spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/sign_in_spinner</item>
    </style>
    <!--自动匹配输入框-->
    <style name="auto_complete_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/auto_complete_tv_sign_in</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:hint">@string/name_input_or_drop</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/edit_text_enable</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="auto_complete_text_view_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableEnd">@drawable/ic_info_drop_down</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <!--来访登记访客信息-->

    <style name="HomePageStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/home_title_bg</item>
    </style>

    <style name="inputHintStyle">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="query_edit_text" parent="visitor_edit_edit_text">
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="visit_record_item_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/visit_record_item_cell</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="visit_record_header" parent="visit_record_item_cell">
        <item name="android:textColor">#333333</item>
    </style>

    <style name="visitor_details_edit_gender" parent="visitor_edit_edit_text">
        <item name="android:background">@drawable/edit_visitor_details_gender</item>
    </style>

    <style name="off_detail_words">
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="off_detail_off_time">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="off_detail_head" parent="off_detail_words">
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="off_detail_btn">
        <item name="android:layout_width">116dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="off_detail_hint">
        <item name="android:paddingEnd">8dp</item>
    </style>
    <style name="query_options_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    <style name="off_detail_text">
        <item name="android:textColor">#666666</item>
    </style>
    <style name="red_start">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:text">*</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>
</resources>
