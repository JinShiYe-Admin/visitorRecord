<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/border"
                android:dashGap="0dp"
                android:dashWidth="0dp" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
    <item android:right="5dp">
        <bitmap
            android:gravity="end"
            android:src="@drawable/ic_info_drop_down" />
    </item>
</layer-list>