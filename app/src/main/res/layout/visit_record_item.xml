<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_container"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/visit_record_item"
    android:orientation="horizontal">

    <TextView

        android:id="@+id/visitor_name"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/visitor_counter"
        style="@style/visit_record_item_cell"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/visit_reason"
        style="@style/visit_record_item_cell"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/depart_name"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tea_name"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/grade_name"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/class_name"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/stu_name"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/headTea_name"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/in_time"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/is_left"
        style="@style/visit_record_item_cell"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/leave_time"
        style="@style/visit_record_item_cell"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/manage"
        style="@style/visit_record_item_cell"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_detail" />

        <ImageView
            android:id="@+id/icon_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_print" />
    </LinearLayout>
</LinearLayout>